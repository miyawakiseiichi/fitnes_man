<h1 class="text-3xl font-bold text-center">週間メニュー</h1>

<!-- 📌 ログインユーザーのプランを表示 -->
<div class="text-center my-4">
  <% if @plan %>
    <p class="text-lg font-semibold">現在のプラン: <%= @plan.name %></p>
    <p class="text-gray-600"><%= @plan.description %></p>
  <% else %>
    <p class="text-red-500 font-semibold">プランが設定されていません。</p>
  <% end %>
</div>

<!-- 📌 週間メニュー表示 -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
  <% if @weekly_menus.present? %>
    <% @weekly_menus.each do |menu| %>
      <div class="bg-white shadow-lg p-4 rounded-lg">
        <h2 class="text-lg font-semibold"><%= menu.name %></h2>
        <p class="text-gray-600"><%= menu.description %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500 text-center">メニューがありません。</p>
  <% end %>
</div>
