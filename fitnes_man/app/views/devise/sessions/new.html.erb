<div class="container mx-auto max-w-lg px-4">
  <!-- タイトル -->
  <h1 class="text-4xl font-bold text-center mt-10 mb-8">ログイン</h1>

  <!-- ログインフォーム -->
  <div class="bg-white shadow-lg rounded-lg p-6 border">
    <%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "space-y-6" }) do |f| %>
      
      <!-- ユーザー名 or メールアドレス -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block font-semibold text-lg mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-600" %>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, "パスワード", class: "block font-semibold text-lg mb-2" %>
        <%= f.password_field :password, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-600" %>
      </div>

      <!-- ログインボタン -->
      <div class="text-center">
        <%= f.submit "ログイン", class: "w-full bg-gray-800 text-white font-bold py-3 rounded-lg hover:bg-gray-900 transition" %>
      </div>
    <% end %>
  </div>

  <!-- フッターリンク -->
  <div class="text-center mt-6 text-gray-500">
    <%= link_to "会員登録", new_user_registration_path, class: "text-gray-700 hover:underline" %>
  </div>
</div>
