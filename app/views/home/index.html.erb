<div class="container mx-auto px-4">
  <!-- ヘッダー -->
  <header class="flex justify-between items-center py-6 border-b">
  </header>

  <!-- Hero セクション -->
  <section class="bg-gradient-to-r from-blue-50 to-blue-100 py-20 text-center">
    <div class="max-w-2xl mx-auto p-12 bg-white shadow-lg rounded-lg">
      <h2 class="text-5xl font-extrabold text-gray-900 leading-tight">
        健康な毎日のために
      </h2>
      <p class="text-lg text-gray-600 mt-4">
        Let’s マッチョ！あなたの理想の体を目指しましょう。
      </p>
    </div>
  </section>

  <!-- コンテンツ一覧 -->
  <section class="my-12">
    <h2 class="text-3xl font-bold text-center">コンテンツ一覧</h2>

    <div class="flex flex-col space-y-8 mt-8">
      <!-- 上段 (2カラム) -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% contents = [
          ["ジム検索", "gym.jpg", "近くのジムを検索し、ジムの説明", Rails.application.routes.url_helpers.gyms_path],
          ["タスク", "task.jpg", "自動で決められたメニュー以外にタスクを追加", Rails.application.routes.url_helpers.tasks_path]
        ] %>

        <% contents.each do |title, image, description, path| %>
          <div class="bg-white shadow-lg p-6 rounded-lg border hover:shadow-xl hover:scale-105 transition-transform transform">
            <%= link_to path, class: "block" do %>
              <button class="w-full h-full focus:outline-none">
                <!-- 画像の比率を統一 -->
                <div class="w-full aspect-[4/3]">
                  <%= image_tag image, class: "w-full h-full object-cover rounded-md mb-4", alt: title %>
                </div>
                <h3 class="text-lg font-semibold text-gray-800"><%= title %></h3>
                <p class="text-gray-600 mt-2"><%= description %></p>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- 下段 (3カラム) -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <% contents = [
          ["サプリ検索", "supplement.jpg", "あなたのプランに合ったサプリを検索", Rails.application.routes.url_helpers.supplements_path],
          ["プロテイン検索", "protein.jpg", "あなたのプランに合ったプロテインを検索", Rails.application.routes.url_helpers.proteins_path],
          ["週間メニュー", "calendar.jpg", "あなたの毎日のメニュー", Rails.application.routes.url_helpers.weekly_menus_path]
        ] %>

        <% contents.each do |title, image, description, path| %>
          <div class="bg-white shadow-lg p-6 rounded-lg border hover:shadow-xl hover:scale-105 transition-transform transform">
            <%= link_to path, class: "block" do %>
              <button class="w-full h-full focus:outline-none">
                <!-- 画像の比率を統一 -->
                <div class="w-full aspect-[4/3]">
                  <%= image_tag image, class: "w-full h-full object-cover rounded-md mb-4", alt: title %>
                </div>
                <h3 class="text-lg font-semibold text-gray-800"><%= title %></h3>
                <p class="text-gray-600 mt-2"><%= description %></p>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- フッター -->
  <footer class="text-center py-8 border-t text-gray-500">
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <%= link_to "お問い合わせ (入力) ページ", contact_path, class: "text-gray-700 hover:text-blue-600" %>
      <%= link_to "プライバシーポリシー", privacy_policy_path, class: "text-gray-700 hover:text-blue-600" %>
    </div>
  </footer>
</div>