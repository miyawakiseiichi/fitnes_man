    }

    .product-box img {
      width: 100%;
      height: 180px;
      object-fit: contain;
      margin-bottom: 10px;
    }

    .product-name {
      font-size: 16px;
      font-weight: bold;
      margin: 10px 0 5px;
      height: 40px;
      line-height: 1.2;
      overflow: hidden;
    }

    .product-desc {
